<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/toolbar_all_services"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:textColor="@color/walkthrough_txt"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="26.7dp"
                    android:paddingBottom="26.7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Address"
                    android:fontFamily="@font/roboto_medium"/>
                <View
                    android:background="@color/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="17dp">
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mr."
                        android:fontFamily="@font/roboto_regular"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Mrs."
                        android:fontFamily="@font/roboto_regular"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/radio3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Miss."
                        android:fontFamily="@font/roboto_regular"/>
                </RadioGroup>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="17.3dp"
                    android:layout_marginRight="16.7dp">
                    <TextView
                        android:textSize="11.7sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:fontFamily="@font/roboto_regular"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:textColorHint="#8f909e"
                        android:background="@drawable/edit_address_rect"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Enter Name"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="11.7sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.8dp"
                        android:text="Street / Flat"
                        android:fontFamily="@font/roboto_regular"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:textColorHint="#8f909e"
                        android:background="@drawable/edit_address_rect"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Enter Street / Flat"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="11.7sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.8dp"
                        android:text="Locality"
                        android:fontFamily="@font/roboto_regular"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:textColorHint="#8f909e"
                        android:background="@drawable/edit_address_rect"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Enter Locality"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/walkthrough_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="16.7dp"
                    android:text="Address Type"
                    android:fontFamily="@font/roboto_regular"/>
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.7dp"
                    android:layout_marginTop="17dp">
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/radio4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:fontFamily="@font/roboto_regular"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/radio5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Office"
                        android:fontFamily="@font/roboto_regular"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/radio6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Other"
                        android:fontFamily="@font/roboto_regular"/>
                </RadioGroup>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/bottom_linear"/>
    <LinearLayout
        android:id="@+id/bottom_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="18.3sp"
            android:textColor="@color/white"
            android:id="@+id/button"
            android:background="@drawable/blue_gradient_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.7dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>
</RelativeLayout>
