<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_appliance_repair"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="21.7sp"
                    android:textColor="@color/txt_color"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginRight="40dp"
                    android:text="Select services in Blocks &amp; Leakages:"
                    android:fontFamily="@font/roboto_bold"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:id="@+id/checkbox1"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="40dp"
                        android:text="Kitchen Sink"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:text="$50"
                        android:fontFamily="@font/roboto_regular"/>
                    <CheckBox
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:id="@+id/checkbox2"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="34dp"
                        android:text="Western Commode"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:text="$50"
                        android:fontFamily="@font/roboto_regular"/>
                    <CheckBox
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:id="@+id/checkbox3"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="34dp"
                        android:text="Tap "
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:text="$50"
                        android:fontFamily="@font/roboto_regular"/>
                    <CheckBox
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:id="@+id/checkbox4"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="34dp"
                        android:text="Wash Basin  "
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:text="$30"
                        android:fontFamily="@font/roboto_regular"/>
                    <CheckBox
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:id="@+id/checkbox5"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="34dp"
                        android:text="Shower"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:text="$50"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/bottom_linear"/>
    <LinearLayout
        android:id="@+id/bottom_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="18.3sp"
            android:textColor="@color/white"
            android:id="@+id/button"
            android:background="@drawable/blue_gradient_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.7dp"
            android:text="Next"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>
</RelativeLayout>
