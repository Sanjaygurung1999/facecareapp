<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_appliance_repair"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="80dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"
                        android:text="Cash After Service"
                        android:fontFamily="@font/roboto_regular"/>
                    <View
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="11.7dp"
                        android:checked="true"
                        android:text="Debit Card"
                        android:fontFamily="@font/roboto_regular"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:textColorHint="#8f909e"
                        android:background="@drawable/edit_address_rect"
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginRight="16.7dp"
                        android:hint="Enter Card Number"
                        android:inputType="number"
                        android:fontFamily="@font/roboto_regular"/>
                    <EditText
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:textColorHint="#8f909e"
                        android:background="@drawable/edit_address_rect"
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="11.7dp"
                        android:layout_marginRight="16.7dp"
                        android:hint="Name On Card"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_regular"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16.7dp"
                            android:layout_marginTop="11.7dp"
                            android:layout_weight="1">
                            <EditText
                                android:textSize="15sp"
                                android:textColor="@color/walkthrough_txt"
                                android:textColorHint="#8f909e"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/edit_address_rect"
                                android:paddingLeft="17dp"
                                android:paddingTop="13dp"
                                android:paddingRight="17dp"
                                android:paddingBottom="13dp"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:hint="MM"
                                android:inputType="number"
                                android:fontFamily="@font/roboto_regular"/>
                            <EditText
                                android:textSize="15sp"
                                android:textColor="@color/walkthrough_txt"
                                android:textColorHint="#8f909e"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/edit_address_rect"
                                android:paddingLeft="17dp"
                                android:paddingTop="13dp"
                                android:paddingRight="17dp"
                                android:paddingBottom="13dp"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11.7dp"
                                android:hint="YY"
                                android:inputType="number"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>
                        <EditText android:textSize="15sp" android:textColor="@color/walkthrough_txt" android:textColorHint="#8f909e" android:gravity="center" android:background="@drawable/edit_address_rect" android:paddingLeft="17dp" android:paddingTop="13dp" android:paddingRight="17dp" android:paddingBottom="13dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11.7dp" android:layout_marginRight="16.7dp" android:hint="CVV" android:maxLength="3" android:inputType="number" android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <View
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="12dp"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Credit Card"
                        android:fontFamily="@font/roboto_regular"/>
                    <View
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Netbanking"
                        android:fontFamily="@font/roboto_regular"/>
                    <View
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"/>
                    <RadioButton
                        android:theme="@style/MyRadioButton"
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Wallet"
                        android:fontFamily="@font/roboto_regular"/>
                    <View
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"/>
                </RadioGroup>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/bottom_linear"/>
    <LinearLayout
        android:id="@+id/bottom_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linear"
                android:background="@drawable/blue_gradient_rect"
                android:paddingLeft="13dp"
                android:paddingTop="8.3dp"
                android:paddingRight="13dp"
                android:paddingBottom="8.3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="11.7dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Detail"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="18.3sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$250"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place Request"
                    android:fontFamily="@font/roboto_medium"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_right_arrow3"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
