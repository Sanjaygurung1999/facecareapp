<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f7f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_appliance_repair"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.7dp"
                android:layout_marginRight="11.7dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="6dp">
                    <TextView
                        android:textSize="11.7sp"
                        android:textColor="#9192a0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sub Total"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$150"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:textSize="11.7sp"
                        android:textColor="#9192a0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Service Tax"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/dotted_line"
                    android:layerType="software"/>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.3dp"
                    android:layout_marginBottom="16.7dp">
                    <TextView
                        android:textSize="11.7sp"
                        android:textColor="@color/txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total "
                        android:fontFamily="@font/roboto_medium"/>
                    <TextView
                        android:textSize="16.7sp"
                        android:textColor="@color/txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="$150"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewOffer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.7dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16.7dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_offers2"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/walkthrough_txt"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:text="Apply Coupon"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_right_arrow3"
                    android:tint="#b4b8bd"
                    tools:ignore="UseAppTint" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.7dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="16.7dp"
                    android:layout_marginRight="11.7dp">
                    <TextView
                        android:textSize="16.7sp"
                        android:textColor="@color/txt_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Items in your Cart"
                        android:fontFamily="@font/sf_pro_display_medium"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="#5a5b65"
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home Deep Cleaning (1 BHK)"
                                android:fontFamily="@font/roboto_regular"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:textSize="20sp"
                                    android:textColor="#5a5b65"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$150"
                                    android:fontFamily="@font/roboto_medium"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/linear_count"
                                    android:background="@drawable/blue_light_rect"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <FrameLayout
                                        android:layout_gravity="center"
                                        android:background="#f2f2f2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp">
                                        <ImageView
                                            android:layout_gravity="center"
                                            android:id="@+id/minus"
                                            android:paddingLeft="4dp"
                                            android:paddingRight="4dp"
                                            android:layout_width="17dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_minus"/>
                                    </FrameLayout>
                                    <TextView
                                        android:textColor="@color/blue"
                                        android:layout_gravity="center"
                                        android:id="@+id/number"
                                        android:paddingLeft="7dp"
                                        android:paddingTop="4dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="4dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:fontFamily="@font/roboto_regular"/>
                                    <FrameLayout
                                        android:background="#f2f2f2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_margin="1dp">
                                        <ImageView
                                            android:layout_gravity="center"
                                            android:id="@+id/plus"
                                            android:paddingLeft="4dp"
                                            android:paddingRight="4dp"
                                            android:layout_width="17dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_plus"/>
                                    </FrameLayout>
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="#e2e2e2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginRight="11.7dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/bottom_linear"/>
    <LinearLayout
        android:id="@+id/bottom_linear"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="18.3sp"
            android:textColor="@color/white"
            android:id="@+id/button"
            android:background="@drawable/blue_gradient_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.7dp"
            android:text="Next"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>
</RelativeLayout>
