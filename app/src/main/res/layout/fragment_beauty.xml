<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ExpandableListView
                android:id="@+id/expandblelistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@color/white"
                android:childDivider="@color/white"
                android:divider="#e2e2e2"
                android:dividerHeight="0dp"
                android:groupIndicator="@null" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linear_mehndi"
                android:background="@color/white"
                android:paddingLeft="17dp"
                android:paddingTop="10dp"
                android:paddingRight="17dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/mehendi_artists"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/walkthrough_txt"
                    android:layout_gravity="center"
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Mehndi Artist"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"/>
                <ImageView
                    android:layout_gravity="right|center_vertical|center_horizontal|center"
                    android:id="@+id/arrow"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_down_arrow5"
                    android:rotation="270"/>
            </LinearLayout>
            <LinearLayout
                android:background="#f5f7f8"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:textSize="21.7sp"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why Rapid?"
                    android:fontFamily="@font/roboto_italic"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_senior_beautician"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Verified Senior Beautician."
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_carry_item"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="We Carry All The Required Items. "
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_hygiene"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/walkthrough_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Most Focus On Hygiene."
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
