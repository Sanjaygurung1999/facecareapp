<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.7dp"
        android:layout_marginTop="2.7dp"
        android:layout_marginRight="11.7dp"
        android:layout_marginBottom="11.7dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.7sp"
                android:textColor="@color/txt_color"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Salon at home for Women"
                android:fontFamily="@font/roboto_regular"/>
            <View
                android:background="@color/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11.7dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="16.7dp"
                    android:layout_height="16.7dp"
                    android:src="@drawable/ic_correct_1"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Booking Accepted"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <TextView
                android:textSize="11.7sp"
                android:textColor="#8f909e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="Arrival time of your professional"
                android:fontFamily="@font/roboto_regular"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/walkthrough_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="9:00 am on sun, 30th Dec"
                android:fontFamily="@font/roboto_regular"/>
            <View
                android:background="@color/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="11.7dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:padding="13sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"/>
                <View
                    android:background="@color/view_line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:padding="13sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Need Help?"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
