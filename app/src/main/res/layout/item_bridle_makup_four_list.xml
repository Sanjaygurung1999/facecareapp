<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.7dp"
        android:layout_marginTop="1.7dp"
        android:layout_marginRight="11.7dp"
        android:layout_marginBottom="11.7dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/girl"
                        android:layout_width="51.3dp"
                        android:layout_height="51.3dp"
                        android:layout_marginRight="11.7dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16.7sp"
                            android:textColor="#5a5b65"
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Erica"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:textSize="11.7sp"
                            android:textColor="#8f909e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Best in Class"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/linear"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:textSize="20sp"
                            android:textColor="#5a5b65"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10"
                            android:fontFamily="@font/roboto_medium"/>
                        <TextView
                            android:textSize="13.3sp"
                            android:textColor="#8f909e"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/_15"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:textSize="13.3sp"
                            android:textColor="#f97b73"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:text="Save 25%"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/linear1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="11.7sp"
                                android:textColor="#8f909e"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:text="Bride :"/>
                            <TextView
                                android:textSize="20sp"
                                android:textColor="#5a5b65"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$10"
                                android:fontFamily="@font/roboto_medium"/>
                            <TextView
                                android:textSize="13.3sp"
                                android:textColor="#8f909e"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/_15"
                                android:fontFamily="@font/roboto_regular"/>
                            <TextView
                                android:textSize="13.3sp"
                                android:textColor="#f97b73"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="Save 25%"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="11.7sp"
                                android:textColor="#8f909e"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:text="per Guest :"/>
                            <TextView
                                android:textSize="20sp"
                                android:textColor="#5a5b65"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$5"
                                android:fontFamily="@font/roboto_medium"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="4.5"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/linear_add"
                        android:background="@drawable/blue_light_rect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/blue"
                            android:paddingLeft="19dp"
                            android:paddingTop="5dp"
                            android:paddingRight="19dp"
                            android:paddingBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/linear_count"
                        android:background="@drawable/blue_light_rect"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_gravity="center"
                            android:background="#f2f2f2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/minus"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_minus"/>
                        </FrameLayout>
                        <TextView
                            android:textColor="@color/blue"
                            android:layout_gravity="center"
                            android:id="@+id/number"
                            android:paddingLeft="8.5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="8.5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:fontFamily="@font/roboto_regular"/>
                        <FrameLayout
                            android:layout_gravity="center"
                            android:background="#f2f2f2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/plus"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_plus"/>
                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
