<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:background="@drawable/gray_dateday_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16.7dp"
        android:layout_marginBottom="16.7dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="19.7dp"
            android:paddingTop="12.5dp"
            android:paddingRight="19.7dp"
            android:paddingBottom="12.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15.6sp"
                android:textColor="#8f909e"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:fontFamily="@font/roboto_regular"/>
            <TextView
                android:textSize="9.9sp"
                android:textColor="#8f909e"
                android:id="@+id/hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="am"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
