<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33.3dp"
        android:layout_marginBottom="15sp">
        <RadioButton
            android:theme="@style/MyRadioButton"
            android:textSize="15sp"
            android:textColor="@color/txt_color"
            android:id="@+id/title"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtle makeup + Free Hairstyling"
            android:fontFamily="@font/roboto_regular"/>
        <TextView
            android:textSize="13.3sp"
            android:textColor="#8f909e"
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:text="-$30 per person"
            android:fontFamily="@font/roboto_regular"/>
        <TextView
            android:textSize="13.3sp"
            android:textColor="#8f909e"
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:text="-Complete Professional Makeup"
            android:fontFamily="@font/roboto_regular"/>
        <TextView
            android:textSize="13.3sp"
            android:textColor="#8f909e"
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="3dp"
            android:text="- Hair: straightening, Blow-dry,   Curls, Buns, Braids"
            android:fontFamily="@font/roboto_regular"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linear"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/girl"
                app:civ_border_color="#e7e7e7"
                app:civ_border_width="3dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img3"
                app:civ_border_color="#e7e7e7"
                app:civ_border_width="3dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img2"
                app:civ_border_color="#e7e7e7"
                app:civ_border_width="3dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/girl"
                app:civ_border_color="#e7e7e7"
                app:civ_border_width="3dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
