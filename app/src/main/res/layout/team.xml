<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/headerlayout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="17dp"
        android:paddingTop="10dp"
        android:paddingRight="17dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/salon_at_home"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/walkthrough_txt"
            android:layout_gravity="center"
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Vegetable &amp; Fruit "
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"/>
        <ImageView
            android:layout_gravity="right|center_vertical|center_horizontal|center"
            android:id="@+id/arrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_down_arrow5"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear"
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>
